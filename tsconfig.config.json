{
  "extends": ["@vue/tsconfig/tsconfig.dom.json"],
  "vueCompilerOptions": {
    "strictTemplates": true
  },
  "compilerOptions": {
    "isolatedModules": true,
    "target": "ES2022",
    "module": "ES2022",
    "strict": true,
    "allowJs": false,
    "checkJs": false,
    "jsx": "preserve",
    "declaration": true,
    "removeComments": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "outDir": "./out",
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "lib": ["ES2018", "DOM"]
  }
}
